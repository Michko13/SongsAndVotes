@page "/artist/create"
@inject IArtistRepository artistRepository
@inject NavigationManager navigationManager

<MudText Typo="@Typo.h4" Style="margin-bottom: 15px;">Create artist</MudText>

<ArtistForm Artist="artist" OnValidSubmit="Create" />

@code {

    private Artist artist = new Artist();

    private async Task Create()
    {
        await artistRepository.CreateArtist(artist);
        navigationManager.NavigateTo("artists");
    }
}
